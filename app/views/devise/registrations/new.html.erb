
<section class="switchable bg--secondary">
                                <div class="container">
                                    <div class="row justify-content-between align-items-center">
                                        <div class="col-md-6 col-lg-5 col-12">
                                            <div class="switchable__text">
                                                <h2>Create an account</h2>
                                                <span>Already have an account?
                                                    <%= link_to "Log in", new_session_path(resource_name) %>
                                                </span>
                                                <hr class="short">
                                                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row">
                                                        <div class="col-12">
        <%= f.label :username, class: 'col-form-label'  %>
        <%= f.text_field :username, class: 'form-control'  %>
      </div>
                                                        <div class="col-12">
        <%= f.label :name, class: 'col-form-label'  %>
        <%= f.text_field :name, class: 'form-control'  %>
      </div>

      <div class="col-12">
        <%= f.label :email, class: 'col-form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="col-12">
         <%= f.label :password, class: 'col-form-label' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="col-12">
        <%= f.label :password_confirmation, class: 'col-form-label' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      </div>
      <br />
                                                        <div class="col-12">
      <button type="submit" class="btn btn--primary">Sign up</button>
      </div>
      
    <% end %>
                                                
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-lg-5 hidden-sm-down">
                                            <img alt="Image" class="border--round box-shadow-shallow" src="https://hewebrie-cdn.sirv.com/Images/beer-bottles.png">
                                        </div>
                                    </div>
                                    <!--end of row-->
                                </div>
                                <!--end of container-->
                            </section>
  
    