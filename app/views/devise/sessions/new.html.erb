
<section class="switchable bg--secondary">
                                <div class="container">
                                    <div class="row justify-content-between align-items-center">
                                        <div class="col-md-6 col-lg-5 col-12">
                                            <div class="switchable__text">
                                                <h2>Login to your account</h2>
                                                <span>Don't have an account?
                                                    <%= link_to "Sign up", new_registration_path(resource_name) %>
                                                </span><br/>
                                                <span>Forgot your password?
                                                    <%= link_to "Recover account", new_password_path(resource_name) %>
                                                </span>
                                                <hr class="short">
                                                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
                                                        <div class="col-12">
        <%= f.label :email, class: "col-form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
                                                        <div class="col-12">
        <%= f.label :password, class: "col-form-label" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      </div>
      <br />
                                                        <div class="col-12">
      <button type="submit" class="btn btn--primary">Login</button>
      </div>
      
    <% end %>
                                                
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-lg-5 hidden-sm-down">
                                            <img alt="Image" class="border--round box-shadow-shallow" src="https://hewebrie-cdn.sirv.com/Images/beer-bottles.png">
                                        </div>
                                    </div>
                                    <!--end of row-->
                                </div>
                                <!--end of container-->
                            </section>
  
    </div>
  </div>
  </div>
</div>